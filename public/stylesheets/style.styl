$bg_col = #232323

body, html
  margin 0px
  padding 0px
  background-color $bg_col
  font-family "Roboto Condensed"

body
  overflow-x hidden
  position relative

.hero
  // real height 1500/1125
  $hero_height = 1800px
  height 800px
  width ($hero_height * 0.85)
  background-image url(/images/nightscene.jpg)
  background-size cover
  position absolute
  top 0px
  margin-left (@width * -0.5)
  left 50%
  overflow hidden

  .scene
    width 100%
    position absolute
    z-index 1
  
  
  &:after
  &:before
    content ''
    display block
    position absolute
    z-index 2
    bottom 0px
    border-bottom ($hero_height / 4) solid $bg_col
  
  &:before
    border-right (@width / 2) solid transparent
  &:after
    border-left (@width / 2) solid transparent
    right 0px

  .brik
    width 1000px
    max-width 80%
    position relative
    z-index 3
    margin 0 auto
    display block
    padding-top 100px

.hero-imposter
  height 800px
  width 100%
  position relative

.greeny
  width 100%
  background-color #aac22c

.content
  width 100%
  position relative
  z-index 10
  margin-top -175px
  color white
  box-sizing border-box
  padding 400px 0px 0px
  overflow hidden

  h1, h2, h3, h4, h5
    font-family "Roboto Condensed"

  h1
    font-size 3em

  .collaborators, .team 
    position relative
    z-index 16

  .collaborators
    text-align center

    li
      list-style-type none
      display inline-block
      width 160px
      padding 10px 5px
      strong
        width 100%
        text-align center
        display block
        margin-top 10px
      a
        display block
        margin 0 auto
        width 120px
        height 120px
        background-color white
        border-radius 60px
        position relative
        line-height 100px
        background-size 80%
        background-position center
        background-repeat no-repeat
        box-shadow 0px 0px 0px 4px $bg_col
        img
          display none


  .contact
    text-align center
    color #aac22c
    .top
      font-size 3em
      font-family "Roboto Condensed"
      padding-top 30px
      font-weight bold
    .mid
      margin-top -15px
      font-size 2em
      font-family "Roboto Condensed"
      margin-bottom 20px

    .mode
      font-family "Roboto Condensed"
      font-size 1.4em
      margin-bottom 10px

      a
        color mix(white, #aac22c, 60%)
        &:hover
          color #aac22c

      .address
        font-family Inconsolata
        font-size 0.7em

      .mode-head
        &:before, &:after
          display inline-block
          content '——'
          margin 10px
          color #374f5a
          letter-spacing -4px
          font 'Gentium Book Basic'
        color mix(white, #374f5a, 50%)
        font-size 0.8em
        margin-left -5px
        &:before
          margin-right 15px
    

  .team
    margin-top 140px
    text-align center
    li 
      list-style-type none
      display inline-block
      text-align center
      width 150px

      img
        width 100px
        border-radius 60px
        box-shadow 0px 0px 0px 4px $bg_col
        display inline-block

      strong
        font-family "Roboto Condensed"
        display block

      em
        font-family "Gentium Book Basic"
        font-size 0.9em
        display block
        margin 0px
        color rgba(white, 50%)

.big-hex
  $hex_height = 700px
  height ($hex_height / 2)
  width ($hex_height * 0.85)
  position relative
  z-index 20
  overflow visible

  .hero-capt
    color $bg_col     
    width @width - 60px
    margin 0 auto 
    text-align center
    position relative
    top -10px

    &:after
      display block
      content ''
      height 40px
      width 300px
      margin 0 auto
      border-bottom 2px solid #374f5a
      z-index 10

    div
      margin 10px 0px

    .top
      margin-top 0px
      font-size 3.5em
      font-family "Roboto Condensed"
      font-weight bold

    .mid
      font-family 'Gentium Book Basic'
      font-size 2em
      font-style italic
      &:before, &:after
        content '———'
        display inline-block
        margin 0px 15px
        letter-spacing -4px

    .low
      font-family "Roboto Condensed"
      font-size 2.5em
      line-height 110%

  .hero-sub
    padding-top 30px
    font-size 1.2em
    font-family 'Gentium Book Basic'
    font-weight 400
    font-style italic
    color #374f5a
    width 400px
    text-align center
    margin 0 auto
    position relative
    z-index 12



  
  &:after
  &:before
    content ''
    display block
    position absolute
    border-left (@width / 2) solid transparent
    border-right @border-left
    
  &:before
    border-bottom ($hex_height / 4) solid 
    top ($hex_height * -0.25)
  
  &:after
    border-top ($hex_height / 4) solid 
    bottom ($hex_height * -0.25)

  margin ($hex_height * -0.25 - 50px) auto 0 
  &.about
    &:after, &:before
      border-bottom-color #aac22c
      border-top-color #aac22c

    background-color #aac22c

.hex
  $hex_height = 3000px
  height ($hex_height / 2)
  width ($hex_height * 0.85)
  position relative
  
  &:after
  &:before
    content ''
    display block
    position absolute
    border-left (@width / 2) solid transparent
    border-right @border-left
    
  &:before
    border-bottom ($hex_height / 4) solid $bg_col
    top ($hex_height * -0.25)
  
  &:after
    border-top ($hex_height / 4) solid $bg_col
    bottom ($hex_height * -0.25)
      
  background-color $bg_col

  &.left
    float right
    margin-right 50%
  &.right
    float left
    margin-left 50%
  
  &.left + &.right
    margin-top (@height * -1)
  &.right + &.left
    margin-top (@height * 1)

  .big-hex + &
    margin-top (@height * 0.5)

  &.center
    position absolute
    z-index 0
    top 700px
    height 1500px
    left 50%
    margin-left (@width * -0.5) 
    &:after
      display none

  &.info, &.team
    &:after, &:before
      border-bottom-color #374f5a
      border-top-color #374f5a

    background-color #374f5a

.minihex-leash
  width 100%
  height 550px
  overflow hidden

.minihex
  $hex_height = 600px 
  height ($hex_height * 0.85 )
  width ($hex_height / 2)
  position relative
  
  &:after
  &:before
    content ''
    display block
    position absolute
    border-top (@height / 2) solid transparent
    border-bottom @border-top
    top 0px
    
  &:before
    border-right ($hex_height / 4) solid $bg_col
    left ($hex_height * -0.25)
  
  &:after
    border-left ($hex_height / 4) solid $bg_col
    right ($hex_height * -0.25)
      
  background-color $bg_col

  &.center
    margin 100px auto 0
    float none
